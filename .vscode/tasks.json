{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker Compose: Up",
      "type": "shell",
      "command": "docker compose up -d",
      "options": {
        "cwd": "${workspaceFolder}/cutit_backend"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Docker Compose: Down",
      "type": "shell",
      "command": "docker compose down",
      "options": {
        "cwd": "${workspaceFolder}/cutit_backend"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Docker Compose: Build",
      "type": "shell",
      "command": "docker compose build --no-cache",
      "options": {
        "cwd": "${workspaceFolder}/cutit_backend"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Docker Compose: Rebuild Backend",
      "type": "shell",
      "command": "docker compose up --build --no-cache backend",
      "options": {
        "cwd": "${workspaceFolder}/cutit_backend"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Docker Compose: Logs (follow)",
      "type": "shell",
      "command": "docker compose logs -f",
      "options": {
        "cwd": "${workspaceFolder}/cutit_backend"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Backend: Bash inside container",
      "type": "shell",
      "command": "docker compose exec backend sh",
      "options": {
        "cwd": "${workspaceFolder}/cutit_backend"
      },
      "problemMatcher": []
    }
  ]
}
